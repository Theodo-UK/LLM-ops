// schema.prisma

generator client_py {
  provider  = "prisma-client-py"
  interface = "sync"
  output    = "../sdk-python/.venv/lib/python3.11/site-packages/prisma/"
}

generator client_js {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-1.0.x"]
  output        = "../front/node_modules/.prisma/client/"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // uses connection pooling
}

model llmLogs {
  id            String   @id @default(uuid())
  datetime_utc  DateTime
  input_string  String
  output_string String
  total_tokens  Int
  cost          Float?
  tags          Tag[]
  project       Project  @relation(fields: [projectName], references: [name])
  projectName   String
}

model Tag {
  id   String    @id @default(uuid())
  name String
  logs llmLogs[]
}

model Project {
  id      String    @id @default(uuid())
  name    String    @unique
  llmLogs llmLogs[]
}

model omnilogUser {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String
}
